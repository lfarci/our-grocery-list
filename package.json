{
  "name": "our-grocery-list",
  "version": "1.0.0",
  "description": "Simple shared grocery list PWA with one global list",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "postinstall": "cd api && dotnet restore",
    "dev": "swa start http://localhost:5173 --api-location ./api",
    "start": "npm run dev",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "cd frontend && npm run build",
    "build:api": "cd api && dotnet build",
    "clean": "npm run clean:frontend && npm run clean:api",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:api": "cd api && rm -rf bin obj",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.1",
    "@playwright/test": "^1.57.0"
  },
  "keywords": [
    "grocery-list",
    "pwa",
    "react",
    "azure-functions"
  ],
  "author": "",
  "license": "MIT"
}
